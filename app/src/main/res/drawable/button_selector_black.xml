<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_focused="true">
		<shape>
			<solid
					android:color="@color/pure_black"/>
			<stroke
					android:color="@color/bright_green"
					android:width="2dp"/>
		</shape>
	</item>
	<item android:state_pressed="true">
		<shape>
			<solid android:color="@color/bright_green"/>
			<stroke
					android:color="@color/black_panel_border"
					android:width="1dp"/>
		</shape>
	</item>
	<item>
		<shape>
			<solid android:color="@color/pure_black"/>
			<stroke
					android:color="@color/black_panel_border"
					android:width="1dp"/>
		</shape>
	</item>
</selector>