<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_focused="true">
		<shape>
			<solid
					android:color="@color/lightRedActive"/>
			<padding
					android:left="10dp"
					android:top="10dp"
					android:right="10dp"
					android:bottom="10dp"/>
			<corners android:radius="20dp"/>
			<stroke
					android:color="@color/bright_green"
					android:width="2dp"/>
		</shape>
	</item>
	<item android:state_pressed="true">
		<shape>
			<solid android:color="@color/lightRedPassive"/>
			<padding
					android:left="10dp"
					android:top="10dp"
					android:right="10dp"
					android:bottom="10dp"/>
			<corners android:radius="20dp"/>
			<stroke
					android:color="@color/pure_black"
					android:width="2dp"/>
		</shape>
	</item>
	<item>
		<shape>
			<solid android:color="@color/lightRedActive"/>
			<padding
					android:left="10dp"
					android:top="10dp"
					android:right="10dp"
					android:bottom="10dp"/>
			<corners android:radius="20dp"/>
			<stroke
					android:color="@color/pure_black"
					android:width="2dp"/>
		</shape>
	</item>
</selector>