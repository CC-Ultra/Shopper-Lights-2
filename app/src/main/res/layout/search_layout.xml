<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal"
		android:orientation="vertical">
	<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="80dp"
			android:layout_marginRight="80dp"
			android:layout_marginTop="10dp"
			android:gravity="center"
			android:maxLines="1"
			android:hint="Ключевое слово"
			android:id="@+id/inputKeyword"/>
	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Поиск"
			android:id="@+id/btnSubmit"/>
	<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:visibility="gone"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="80dp"
			android:layout_marginRight="80dp"
			android:background="@drawable/list_element_border"
			android:id="@+id/fullMatch">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="Полное совпадение"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:id="@+id/txtFullMatch"/>
	</FrameLayout>
	<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="80dp"
			android:layout_marginRight="80dp"
			android:visibility="gone"
			android:background="@drawable/list_element_border"
			android:id="@+id/partialMatch">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="Частичное совпадение"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:id="@+id/txtPartialMatch"/>
	</FrameLayout>
</LinearLayout>
