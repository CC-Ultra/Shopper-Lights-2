<resources >

	<style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="buttonStyle">@style/BasicButtonStyle</item>
		<item name="android:buttonStyle">@style/BasicButtonStyle</item>
		<item name="editTextStyle">@style/BasicEditText</item>
	</style>

	<style name="BasicButtonStyle">
		<item name="android:textAllCaps">false</item>
		<item name="android:minWidth">70dp</item>
		<item name="android:minHeight">50dp</item>
		<item name="android:focusable">true</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="BasicEditText" parent="Base.V7.Widget.AppCompat.EditText">
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:layout_marginBottom">2dp</item>
		<item name="android:gravity">center</item>
		<item name="android:singleLine">true</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:textColor">@color/bright_yellow</item>
		<item name="android:textColorHighlight">@color/bright_red</item>
		<item name="android:background">@drawable/edit_text_selector</item>
		<item name="android:textCursorDrawable">@drawable/edit_text_cursor_selector</item>
	</style>

</resources >
